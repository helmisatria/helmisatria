---
import BlogContent from "../components/Blog/BlogPage/BlogContent.astro";
import BlogHeader from "../components/Blog/BlogPage/BlogHeader.astro";
import LayoutBlog from "../layouts/LayoutBlog.astro";
---

<LayoutBlog>
  <BlogHeader />
  <div role="separator" class="header-separator relative h-[2px] w-full"></div>

  <BlogContent />
</LayoutBlog>

<style>
  .header-separator {
    background: linear-gradient(
      to right,
      transparent,
      transparent,
      transparent,
      hsla(221, 39%, 64%, 0.5) 60%,
      transparent,
      transparent
    );
  }
</style>
