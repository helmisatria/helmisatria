---
import { tw } from "../../utils/clsx";

type Props = {
  sidebarOnDetail?: boolean;
};

const { sidebarOnDetail = false } = Astro.props;
---

<div
  class={tw(
    "w-full bg-white shadow-lg lg:w-[320px] lg:min-w-[320px] lg:bg-slate-50 xl:w-[380px] xl:min-w-[380px]",
    sidebarOnDetail && "border-t"
  )}
>
  <div class="relative mx-auto flex max-w-xl flex-col items-stretch px-6 py-6 lg:h-full lg:px-9 lg:pt-12">
    <div class="separator-highlight absolute right-0 mt-20 hidden h-[600px] w-[2px] lg:block"></div>

    <div
      style="box-shadow: 0px 43px 17px rgba(0, 0, 0, 0.01), 0px 24px 14px rgba(0, 0, 0, 0.05), 0px 11px 11px rgba(0, 0, 0, 0.09), 0px 3px 6px rgba(0, 0, 0, 0.1), 0px 0px 0px rgba(0, 0, 0, 0.1)"
      class={tw(
        "rounded-lg lg:p-4 mb-8 p-2 bg-white self-center hd flex items-center justify-center",
        sidebarOnDetail && "hidden lg:block"
      )}
    >
      <img
        height={184}
        width={184}
        class="aspect-square h-52 max-w-sm rounded-lg object-cover lg:w-52"
        src="/images/helmi-blog-square.png"
        alt="Helmi Satria"
      />
    </div>

    <div class="flex flex-col lg:mt-12">
      <h2 class="text-xl font-semibold tracking-tight text-slate-900">Helmi Satria</h2>
      <p class="mt-2 max-w-sm text-base leading-140 tracking-tight lg:text-lg">
        a happy full-stack developer who aims to help others grow in web development
      </p>

      <p class="mt-2 max-w-xs text-sm leading-140 tracking-tight text-slate-600 lg:mt-5 lg:text-base">
        5 years of experience in using node.js and vue.js (also react.js) for full-stack development
      </p>
    </div>

    <a class="mt-4 text-sm font-semibold tracking-tight text-cyan-800" href="/">Check my full profile</a>

    <div class="mt-7 space-x-6 text-slate-600 lg:mt-10">
      <a
        href="https://www.tiktok.com/@helmisatria_"
        target="_blank"
        rel="noreferrer"
        class="group inline-flex items-center space-x-2 font-medium"
      >
        <!-- Tiktok SVG -->
        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          <g clip-path="url(#tiktok-svg)">
            <path
              d="M8.34992 0.0133333C9.22325 0 10.0899 0.00666667 10.9566 0C11.0099 1.02 11.3766 2.06 12.1233 2.78C12.8699 3.52 13.9233 3.86 14.9499 3.97333V6.66C13.9899 6.62667 13.0233 6.42667 12.1499 6.01333C11.7699 5.84 11.4166 5.62 11.0699 5.39333C11.0633 7.34 11.0766 9.28667 11.0566 11.2267C11.0033 12.16 10.6966 13.0867 10.1566 13.8533C9.28325 15.1333 7.76992 15.9667 6.21658 15.9933C5.26325 16.0467 4.30992 15.7867 3.49658 15.3067C2.14992 14.5133 1.20325 13.06 1.06325 11.5C1.04992 11.1667 1.04325 10.8333 1.05658 10.5067C1.17658 9.24 1.80325 8.02667 2.77658 7.2C3.88325 6.24 5.42992 5.78 6.87658 6.05333C6.88992 7.04 6.84992 8.02667 6.84992 9.01333C6.18992 8.8 5.41658 8.86 4.83658 9.26C4.41658 9.53333 4.09658 9.95333 3.92992 10.4267C3.78992 10.7667 3.82992 11.14 3.83658 11.5C3.99658 12.5933 5.04992 13.5133 6.16992 13.4133C6.91658 13.4067 7.62992 12.9733 8.01658 12.34C8.14325 12.12 8.28325 11.8933 8.28992 11.6333C8.35658 10.44 8.32992 9.25333 8.33658 8.06C8.34325 5.37333 8.32992 2.69333 8.34992 0.0133333Z"
