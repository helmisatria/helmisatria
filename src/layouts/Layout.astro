---
import { SEO } from "astro-seo";
import "../styles/fonts.css";

const title = "Helmi Satria - Fullstack Developer";
const description =
  "Experienced fullstack javascript developer with 5+ years of experience in building web applications";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <SEO
      title={title}
      description={description}
      openGraph={{
        image: {
          alt: "Helmi Satria",
          height: 900,
          width: 1600,
        },
        basic: {
          image: "/images/og.png",
          title:
            "Helmi Satria - Professional Fullstack Developer with 5 Years of Experience Aiming To Help Others Grow in Web Development",
          type: "website",
        },
      }}
      twitter={{
        creator: "@helmisatria_",
      }}
      extend={{
        link: [{ rel: "icon", href: "/favicon.ico" }],
        meta: [
          {
            name: "twitter:image",
            content: "/images/og.png",
          },
          { name: "twitter:title", content: description },
          {
            name: "twitter:description",
            content: description,
          },
        ],
      }}
    />

    <script type="text/partytown" src="https://www.googletagmanager.com/gtag/js?id=G-40YQWWQ9TY"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }

      gtag("js", new Date());
      gtag("config", "G-40YQWWQ9TY");
    </script>
  </head>

  <body>
    <slot />

    <style is:global>
      html {
        font-family: "Figtree", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell,
          "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif, "Apple Color Emoji", "Segoe UI Emoji",
          "Segoe UI Symbol";
        background-color: #f6f6f6;
        min-height: 100vh;
      }

      body {
        min-height: 100vh;
      }
    </style>
  </body>
</html>
