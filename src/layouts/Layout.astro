---
import { SEO } from "astro-seo";
import "../styles/fonts.css";

const seoDescription =
  "Experienced fullstack javascript developer with 5+ years of experience in building web applications";

type Props = {
  title?: string;
  seoTitle?: string;
};

const { title = "Helmi Satria - Fullstack Developer", seoTitle = "Helmi Satria - Experienced Fullstack Developer" } =
  Astro.props;
---

<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <SEO
      title={title}
      description={seoDescription}
      openGraph={{
        optional: {
          locale: "id_ID",
          description: seoDescription,
          siteName: "Helmi Satria",
        },
        image: {
          alt: "Helmi Satria",
          height: 630,
          width: 1200,
          url: "https://helmisatria.com/images/og.png",
        },
        basic: {
          image: "https://helmisatria.com/images/og.png",
          title: seoTitle,
          type: "website",
        },
      }}
      twitter={{
        card: "summary_large_image",
        creator: "@helmisatra_",
        site: "@helmisatra_",
      }}
      extend={{
        link: [{ rel: "icon", href: "/favicon.ico" }],
        meta: [
          {
            name: "twitter:image",
            content: "https://helmisatria.com/images/og.png",
          },
          { name: "twitter:title", content: seoTitle },
          {
            name: "twitter:description",
            content: seoDescription,
          },
        ],
      }}
    />

    <!-- Google Tag Manager -->
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-NDLDNMH");
    </script>
  </head>

  <!-- End Google Tag Manager -->

  <body>
    <slot />

    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-NDLDNMH"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->

    <style is:global>
      html {
        font-family: "Figtree", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell,
          "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif, "Apple Color Emoji", "Segoe UI Emoji",
          "Segoe UI Symbol";
        background-color: #f6f6f6;
        min-height: 100vh;
      }

      body {
        min-height: 100vh;
      }

      strong {
        @apply font-semibold;
      }

      /* smooth scroll */
      html {
        scroll-behavior: smooth;
      }

      .navbar-background-light {
        background: linear-gradient(180deg, rgba(9, 130, 163, 0.55) -8.75%, rgba(9, 130, 163, 0) 100%);
      }

      .navbar-background-dark {
        background: linear-gradient(180deg, rgba(5, 31, 46, 1) -8.75%, rgba(9, 130, 163, 0) 100%);
      }

      .no-text-fill-color {
        -webkit-text-fill-color: initial;
        text-fill-color: initial;
      }
    </style>
  </body>
</html>
